<h1>Restaurants</h1>
<div class="cards">
  <% @restaurants.each do |restaurant| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= restaurant.url %>)">
      <%= link_to "#{restaurant.name}", restaurant_path(restaurant), class: "text-decoration-none text-light" %>
    </div>
  <% end  %>
</div>
